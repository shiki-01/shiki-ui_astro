---
import Button from '@components/Button'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
	<main class="flex flex-row items-center justify-center h-screen space-x-4">
		<Button variant="link">Hello Astro!</Button>
		<div class="flex flex-col space-y-4 items-center">
			<Button variant="primary">Hello Astro!</Button>
			<Button variant="secondary">Hello Astro!</Button>
			<Button variant="outline">Hello Astro!</Button>
			<Button variant="none">Hello Astro!</Button>
		</div>
		<div class="flex flex-col space-y-4 items-center">
			<Button variant="primary" radius="full">Hello Astro!</Button>
			<Button variant="secondary" radius="none">Hello Astro!</Button>
			<Button variant="outline" radius="full">Hello Astro!</Button>
			<Button variant="none" radius="none">Hello Astro!</Button>
		</div>
		<div class="flex flex-col space-y-4 items-center">
			<Button variant="primary" disabled>Hello Astro!</Button>
			<Button variant="secondary" disabled>Hello Astro!</Button>
			<Button variant="outline" disabled>Hello Astro!</Button>
			<Button variant="none" disabled>Hello Astro!</Button>
		</div>
	</main>
	</body>
</html>